{
    "name": "vscode-api-test",
    "displayName": "VS Code API Test",
    "description": "Testing VS Code API connectivity and basic functionality",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-api-test.testAPI"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-api-test.testAPI",
                "title": "Test VS Code API"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}
